@import "normalize.styl"
@import "titilium.styl"
@import "ligthbox.styl"



P_gris = #5D5D5D


border-radius(n)
	-moz-border-radius n
	-ms-border-radius n
	-o-border-radius n
	-wap-border-radius n
	-webkit-border-radius n
	border-radius n


body
	font-sise 10px


h1,h3
	margin 0
	font-family "Titillium-Semibold"
	color #fff

h2
	color P_gris
	text-align left
	margin 0


p
	font-family "Titillium-Semibold"
	color #fff
	margin 0
a
	text-decoration:none !important
	color: #000000

nav
	position fixed


 ul 
	text-align:center
	width: 60em  
	background #fff
	opacity: 0.6
li 
	display inline-block
	text-align center
	color P_gris
	font-family "Titillium-Semibold"

figure	
	padding 0
	margin 0
	text-align center
	display inline-block

figcaption
	text-align center
	color P_gris
	font-family "Titillium-Semibold"
	margin-top -2em

.containertext
	margin-left 10%
	padding-top 15%
	width 22em 


.land1
	background url('../img/bg-21.jpg')
	background-size 100%
	width 100%
	height 42.6em
	background-repeat:no-repeat


.bajar
	position fixed
	top 90%
	left 50%
	color P_gris

#scrollUp
	top 550px
	background #479BF1
	padding 1em
	color #fff
	border-radius(4%)


.land1 p
	width 17em

.land2
	background #fff
	width 100%
	height 43.8em
	text-align center

.land2 h2
	color P_gris
	text-align center !important
	margin-top 2em

.land3
	background url('../img/bg-2.jpg')
	background-size 100%
	width 100%
	height 46.6em
	background-repeat:no-repeat

.land3 p 
	width 18em	

.land4
	background url('../img/bg-3.jpg')
	background-size 100%
	width 100%
	height 41.6em
	background-repeat:no-repeat

.land4 h2
	margin-left 10.8em
	width 10em
	display inline-block

.land4 figure 
	display inline-block
