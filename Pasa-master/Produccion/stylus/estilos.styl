@import "titilium.styl"
@import "ligthbox.styl"



P_gris = #5D5D5D


border-radius(n)
	-moz-border-radius n
	-ms-border-radius n
	-o-border-radius n
	-wap-border-radius n
	-webkit-border-radius n
	border-radius n
	
body
	font-sise 10px


h1,h3
	margin 0
	font-family "Titillium-Semibold"
	color #fff

h2
	color P_gris
	text-align left
	margin 0
p
	font-family "Titillium-Semibold"
	color #fff
	margin 0
a
	text-decoration:none !important
	color: #000000

nav
	position fixed
	width 100%


 ul 
	text-align:center 
	background #fff
	opacity: 0.6
li 
	display inline-block
	text-align center
	color P_gris
	font-family "Titillium-Semibold"

figure	
	padding 0
	margin 0
	text-align center
	display inline-block

figcaption
	text-align center
	color P_gris
	font-family "Titillium-Semibold"
	margin-top -4em

footer
	text-align center

footer figure img
	width 12em
	display inline-block

#main
	position absolute
	width 100%
	height 100%
	top 0px
	left 0px
	z-index -1

.containertext
	margin-left 10%
	padding-top 15%
	width 22em
	display inline-block 
	vertical-align top

#land1,#land2,#land3,#land4
	display inline-block
	width 100%
	height 100%
	background-size cover !important
	background-position center !important
	background-repeat no-repeat	

#land1
	background url('../img/bg-21.jpg')
	
.bajar
	position fixed
	top 90%
	left 50%
	color P_gris

#scrollUp
	top 550px
	background #479BF1
	padding 1em
	color #fff
	border-radius(4%)

#land1 p
	width 17em

.land2
	background #fff

#land2 h2
	color P_gris
	text-align center !important
	margin-top 2em
	
#container-phone
	text-align center

.phone
	display inline-block

#land3
	background url('../img/bg-2.jpg')
	
#land3 p 
	width 18em	

#land4
	background url('../img/bg-3.jpg')
	text-align center
		
 .phone
	display inline-block

.phone-server
	display inline-block	

#land4 h2
	width 10em
	display inline-block

#land4 figure 
	display inline-block
	width 14em

#land5
	background-size 100%
	width 100%
	height 42.6em
	text-align center

section #land5 #filosofia
	width 70%
	display inline-block

.apoyo
	width 10em
	display inline-block

#tecnoparque
	width 20%

#filosofia-mobil
	display none



@media screen and (max-width:640px)
	body
		background red

	section #land5 #filosofia			
		display none
	
	#filosofia-mobil
		display inline-block
		width 70%		











